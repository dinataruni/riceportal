<div class = "show-elements">
<%= link_to '<< Back to Quotes Index', quotes_path %> 
<h1>
  Quote Details
</h1>
<div class = "well">
<p>
  <strong>Price:</strong>
  <%= @quote.price %>
</p>

<p>
  <strong>Supplier:</strong>
  <%= @quote.supplier %>
</p>

<p>
  <strong>Commodity:</strong>
  <%= @quote.commodity %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @quote.brand %>
</p>

<p>
  <strong>Pack Size:</strong>
  <%= @quote.pack_size %>
</p>

<p>
  <strong>Volume:</strong>
  <%= @quote.volume %>
</p>

<p>
  <strong>Shipment Details:</strong>
  <%= @quote.shipment %>
</p>

<p>
  <strong>Purchased:</strong>
  <%= t @quote.confirm.class %>
</p>

<p>
  <strong>Created At: </strong><%= @quote.created_at.strftime("%m/%d/%Y %H:%M%p") %></p>

<p>
  <strong>Created By: </strong><%= @quote.user_name %></p>


<%= render "links" %>
</div>


<%= render "comments/comments" %>
<br>
<%= render "comments/form" %>

</div>

<%= link_to '<< Back to Quotes Index', quotes_path %> 
</div>
