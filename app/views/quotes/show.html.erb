
<h1>
  Quote Details
</h1>

<p>
  <strong>Price:</strong>
  <%= @quote.price %>
</p>

<p>
  <strong>Supplier:</strong>
  <%= @quote.supplier %>
</p>

<p>
  <strong>Commodity:</strong>
  <%= @quote.commodity %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @quote.brand %>
</p>

<p>
  <strong>Pack Size:</strong>
  <%= @quote.pack_size %>
</p>

<p>
  <strong>Volume:</strong>
  <%= @quote.volume %>
</p>

<p>
  <strong>Shipment Details:</strong>
  <%= @quote.shipment %>
</p>

<p>
  <strong>Purchased:</strong>
  <%= t @quote.confirm.class %>
</p>

<p>
  <strong>Created At: </strong><%= @quote.created_at.strftime("%m/%d/%Y %H:%M%p") %></p>

<p>
  <strong>Created By: </strong><%= @quote.user_name %></p>


<div class="btn-group">
 
<%= link_to_unless(@quote.confirm?, 'Edit', edit_quote_path(@quote), class: "btn btn-default") do |p|
 link_to('Cannot Edit', '#', class: "btn btn-default disabled") end %>
<%= link_to_unless(@quote.confirm?, 'Confirm Purchase', "#{@quote.id}/create_purchase", method: :create_purchase, data: {confirm: 'Are you sure you want to confirm this quote and record a purchase?'}, class: "btn btn-default") do |p|
    link_to('Already Confirmed', '#', class: "btn btn-default disabled") end %>
 <%= link_to 'New Quote', new_quote_path, class: "btn btn-default" %>
</div>


<br><br>
<%= link_to '<< Back to Requests', quotes_path %> 
